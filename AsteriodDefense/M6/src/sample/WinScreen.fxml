<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane fx:controller="sample.WinScreenController" fx:id="winScreen" prefHeight="586.0" prefWidth="839.0" visible="false" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ImageView fx:id="background" fitHeight="586.0" fitWidth="839.0">
            <Image url="@items/transparent.png" />
        </ImageView>
        <Pane layoutX="320.0" layoutY="193.0" prefHeight="200.0" prefWidth="200.0">
            <Label fx:id="moneyFinalDisplay" style="-fx-font-family: Impact;" layoutX="-30.0" layoutY="100.0" prefHeight="48.0" prefWidth="300.0" textAlignment="CENTER" text="Money Earned: " textFill="WHITE">
                <font>
                    <Font size="30.0" />
                </font>
            </Label>
            <Label fx:id="healthFinalDisplay" style="-fx-font-family: Impact;" layoutX="-30.0" layoutY="150.0" prefHeight="34.0" prefWidth="300.0" textAlignment="CENTER" text="Final Health: " textFill="WHITE">
                <font>
                    <Font size="30.0" />
                </font>
            </Label>
            <Label fx:id="roundsFinalDisplay" style="-fx-font-family: Impact;" layoutX="-30.0" layoutY="200.0" prefHeight="34.0" prefWidth="300.0" textAlignment="CENTER" text="Rounds Lasted: " textFill="WHITE">
                <font>
                    <Font size="30.0" />
                </font>
            </Label>
            <Button fx:id="exit" layoutX="90.0" layoutY="280.0" mnemonicParsing="false" onAction="#closeWindow" prefHeight="44.0" prefWidth="131.0" style="-fx-background-color: red; -fx-font-family: impact;" text="Exit" textFill="WHITE">
                <font>
                    <Font size="22.0" />
                </font>
            </Button>
            <Button fx:id="restart" layoutX="-70.0" layoutY="280.0" mnemonicParsing="false" onAction="#goBackToWelcome" prefHeight="44.0" prefWidth="131.0" style="-fx-background-color: green; -fx-font-family: impact;" text="Restart" textFill="WHITE">
                <font>
                    <Font size="22.0" />
                </font>
            </Button>
            <Label layoutX="-150.0" style="-fx-font-family: Impact;" text="Final Boss Defeated!" prefHeight="50.0" prefWidth="600.0" textAlignment="CENTER" textFill="LIME">
                <font>
                    <Font size="64.0" />
                </font>
            </Label>
        </Pane>
    </children>
</Pane>
